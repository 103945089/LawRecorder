<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">


    <include layout="@layout/include_aipoc_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:visibility="gone">

        <ImageView
            android:id="@+id/im_add"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x48"
            android:src="@mipmap/u1342" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_huiyi_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x240"
        android:layout_marginTop="@dimen/header_height"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_alignParentBottom="true"
            android:background="#BCBCBC" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_huiyi_jinru"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/x100"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/boder_huiyi_action">

                    <ImageView
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/huiyi_jinru" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x24"
                    android:text="加入会议"
                    android:textColor="#6B6B6B"
                    android:textSize="@dimen/x24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_huiyi_chuangjian"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/x100"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/boder_huiyi_action">

                    <ImageView
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/huiyi_tubiao" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x24"
                    android:text="创建会议"
                    android:textColor="#6B6B6B"
                    android:textSize="@dimen/x24" />
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/tv_username"
            android:layout_centerInParent="true"
            android:text="用户名："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_huiyi_action">

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height_90"
            android:background="@color/white"
            android:visibility="gone">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x48"
                android:layout_marginRight="@dimen/x150"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入会议室号码" />

            <ImageView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x24"
                android:src="@mipmap/u320_grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_alignParentBottom="true"
                android:background="#F2F2F2" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_option"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:layout_below="@id/rl_search"
            android:orientation="horizontal"
            android:visibility="gone">



            <RelativeLayout
                android:id="@+id/rl_option1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/huiyi_option_check"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="全部" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_option2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="正在会议"
                    android:textColor="@color/huiyi_check_blue" />

                <TextView
                    android:id="@+id/tv_option2_line"
                    android:layout_width="@dimen/x100"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/huiyi_check_blue" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_option3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="结束会议"
                    android:textColor="@color/huiyi_uncheck"/>


                <TextView
                    android:id="@+id/tv_option3_line"
                    android:layout_width="@dimen/x100"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:background="@color/huiyi_check_blue" />
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_ll_option_line"
            android:layout_below="@id/ll_option"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#D7D7D7" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_ll_option_line">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/srl_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ListView
                    android:id="@+id/lv_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="@color/trans"
                    android:divider="@color/trans"
                    android:listSelector="@color/trans"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/srl_jinxingzhong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <ListView
                    android:id="@+id/lv_jinxingzhong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="@color/trans"
                    android:divider="@color/trans"
                    android:listSelector="@color/trans"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/srl_yijieshu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ListView
                    android:id="@+id/lv_yijieshu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="@color/trans"
                    android:divider="@color/trans"
                    android:listSelector="@color/trans"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_add_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_bg"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x600"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@drawable/boder_huiyi_choose_user">

            <RelativeLayout
                android:id="@+id/rl_window_first"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="创建会议"
                    android:textSize="@dimen/x35"
                    android:textColor="#212121"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@mipmap/icon_window_close"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rl_cjhys_close"
                    android:layout_width="@dimen/x80"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/grey_line_new" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et_huiyi_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginRight="@dimen/x24"
                android:layout_marginBottom="@dimen/x15"
                android:background="@drawable/boder_et_cjhys"
                android:gravity="center_vertical"
                android:layout_below="@id/rl_window_first"
                android:hint="输入会议室名称"
                android:textColorHint="#888888"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x28"
                android:paddingLeft="@dimen/x15" />

            <RelativeLayout
                android:id="@+id/rl_yonghu"
                android:layout_below="@id/et_huiyi_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/grey_line_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_line_new" />

                <TextView
                    android:id="@+id/tv_xzyh_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_centerVertical="true"
                    android:text="选择用户："
                    android:textColor="#515151"
                    android:textSize="@dimen/x28"/>

                <RelativeLayout
                    android:id="@+id/rl_choose_group"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"
                    android:layout_toRightOf="@id/tv_xzyh_left">

                    <TextView
                        android:id="@+id/tv_choose_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/x24"
                        android:layout_marginRight="@dimen/x24"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="点击选择用户"
                        android:textColor="#8A8A8A"
                        android:textSize="@dimen/x28"/>


                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/icon_right_width"
                    android:layout_height="@dimen/icon_right_hight"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x50"
                    android:src="@mipmap/icon_right_grey" />
            </RelativeLayout>



            <LinearLayout
                android:id="@+id/ll_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_yonghu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x100"
                android:orientation="horizontal"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rl_huiyi_speaker"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/im_huiyi_speaker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_huiyi_speaker" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/im_huiyi_mic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/join_huiyi_mic_open" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/x200">

                    <ImageView
                        android:id="@+id/im_huiyi_camera"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/join_huiyi_camera_close" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x60"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_shipinhuiyi"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/x60"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bt_huiyi_shipin"
                    android:gravity="center"
                    android:text="开启会议"
                    android:textSize="@dimen/x28"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_yuyinhuiyi"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/x60"
                    android:background="@drawable/bt_huiyi_yuyin"
                    android:gravity="center"
                    android:text="语音会议"
                    android:textSize="@dimen/x28"
                    android:textColor="#04AEFB"
                    android:visibility="gone"/>
            </RelativeLayout>




        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginBottom="@dimen/x20"
        android:orientation="vertical">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="huiyiyaoqing"
            android:text="会议邀请"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_pwd_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_bg"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x600"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@drawable/boder_huiyi_choose_user">

            <RelativeLayout
                android:id="@+id/rl_pwdwindow_first"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="进入会议"
                    android:textSize="@dimen/x35"
                    android:textColor="#212121"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@mipmap/icon_window_close"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rl_pwdwindow_close"
                    android:layout_width="@dimen/x80"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginLeft="@dimen/x15"
                    android:background="@color/grey_line_new" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et_meeting_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginTop="@dimen/x30"
                android:layout_marginRight="@dimen/x24"
                android:layout_marginBottom="@dimen/x15"
                android:background="@drawable/boder_et_cjhys"
                android:gravity="center_vertical"
                android:layout_below="@id/rl_pwdwindow_first"
                android:hint="输入会议室密码"
                android:textColorHint="#888888"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x28"
                android:paddingLeft="@dimen/x15" />







            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x60"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_join"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/x60"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bt_huiyi_shipin"
                    android:gravity="center"
                    android:text="进入会议"
                    android:textSize="@dimen/x28"
                    android:textColor="@color/white" />

            </RelativeLayout>




        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
