<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_huiyi_tubiao"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            android:background="@drawable/boder_huiyi_action">

            <ImageView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_centerInParent="true"
                android:src="@mipmap/huiyi_tubiao" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_huiyi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/x24"
            android:layout_toRightOf="@id/rl_huiyi_tubiao"
            android:text="会议名称"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x30" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_huiyi_name"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/x20"
            android:layout_toRightOf="@id/rl_huiyi_tubiao"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_metting"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/metting" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:text=""
                android:textColor="@color/huiyi_check_blue"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text=""
                android:textColor="@color/huiyi_check_blue"
                android:textSize="@dimen/x24" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_ruhui"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x50"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@drawable/bt_ruhui"
            android:gravity="center"
            android:text="入会"
            android:textColor="@color/white"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/tv_ruhui_temp"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x50"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:background="@drawable/bt_ruhui"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/x28"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_chuangjianren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ruhui_temp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x24"
            android:text=""
            android:textColor="#A1A1A1"
            android:textSize="@dimen/x24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_line_new" />
    </RelativeLayout>

</LinearLayout>
